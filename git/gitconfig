[core]
	editor = vim
	autocrlf = input
    excludesFile = ~/.gitignore


[user]
	name = Shivansh-007
	email = Shivansh-007@users.noreply.github.com

[alias]
    cp = cherry-pick
	st = status
	cm = commit
	br = branch
	ls-alias = config --get-regexp alias
	llog = log --oneline
	sst = status -s
	ch = checkout
	chb = checkout -b
	mylog = log --pretty=custom
	lgraph = log --oneline --graph --decorate --all
	brd = branch -d
	l = log --oneline
	fame = !python3 -m gitfame

[color "branch"]
    current = green bold
    local = green
    remote = yellow

[color "diff"]
    frag = magenta
    meta = yellow
    new = green
    old = red
    newMoved = cyan
    oldMoved = blue

[color "status"]
    added = green reverse
    changed = yellow reverse
    untracked = red reverse

[help]
	autocorrect = 30

[pretty]

    custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s %C(yellow)(%an)"
    #                     │        │            │            │             └─ author name
    #                     │        │            │            └─ message
    #                     │        │            └─ date (relative)
    #                     │        └─ decorations (branch, heads or tags)
    #                     └─ hash (abbreviated)

[pull]
	rebase = false
